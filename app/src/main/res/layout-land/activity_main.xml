<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:backgroundTint="#7DBCE7"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="413dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginEnd="-1dp"
            android:background="#B24BCE" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="233dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="88dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="89dp"
            android:gravity="center"
            android:text="@string/introduce_datos"
            android:textColor="@color/white"
            tools:textSize="30dp" />

        <EditText
            android:id="@+id/editTextA"
            android:layout_width="335dp"
            android:layout_height="49dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="131dp"
            android:layout_marginEnd="38dp"
            android:background="@drawable/et_style"
            android:backgroundTint="#F2F4FD"
            android:hint="@string/Coeficiente_a"
            android:inputType="numberDecimal"
            android:textColor="#040A1C" />

        <EditText
            android:id="@+id/editTextB"
            android:layout_width="335dp"
            android:layout_height="49dp"
            android:layout_below="@id/editTextA"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/et_style"
            android:backgroundTint="#F2F4FD"
            android:hint="@string/Coeficiente_b"
            android:inputType="numberDecimal"
            android:textColor="#040A1C" />

        <EditText
            android:id="@+id/editTextC"
            android:layout_width="335dp"
            android:layout_height="49dp"
            android:layout_below="@id/editTextB"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/et_style"
            android:backgroundTint="#F2F4FD"
            android:hint="@string/Coeficiente_c"
            android:inputType="numberDecimal"
            android:textColor="#040A1C" />

        <RadioGroup
            android:id="@+id/colorRadioGroup"
            android:layout_width="292dp"
            android:layout_height="186dp"
            android:layout_below="@+id/editTextC"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="358dp"
            android:orientation="vertical"
            android:scrollbarSize="10dp">

            <RadioButton
                android:id="@+id/redRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/Rojo"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/blueRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Azul"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/greenRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Verde"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </RadioGroup>

        <Button
            android:id="@+id/buttonEnviar"
            android:layout_width="201dp"
            android:layout_height="71dp"
            android:layout_below="@+id/colorRadioGroup"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-140dp"
            android:layout_marginEnd="71dp"
            android:backgroundTint="#6DEACA"
            android:text="@string/Generar"
            android:textSize="24dp"
            app:cornerRadius="12dp" />

    </RelativeLayout>
</ScrollView>