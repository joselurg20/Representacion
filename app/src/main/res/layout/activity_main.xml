<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.pruebacanva.CustomView
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SeekBar
        android:id="@+id/seekBarSlope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/customView"
        android:padding="16dp"
        android:max="10"
        android:progress="5"
        android:thumbTint="@android:color/holo_blue_dark"
        android:progressTint="@android:color/holo_blue_dark"/>

    <SeekBar
        android:id="@+id/seekBarIntercept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBarSlope"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:max="100"
        android:progress="50"
        android:thumbTint="@android:color/holo_blue_dark"
        android:progressTint="@android:color/holo_blue_dark"/>

</RelativeLayout>
